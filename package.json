{
  "name": "gluco-tracker-be",
  "version": "1.0.0",
  "description": "A backend app for glucose tracker",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "server": "nodemon server.js",
    "server:prod": "NODE_ENV=production nodemon server.js",
